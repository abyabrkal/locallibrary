extends layout

block content
  h1= title

  ul
  each val in bookinstance_list
    li 
      a(href=val.url) #{val.book.title} : #{val.imprint} - 
      if val.status=='Available'
        button.btn.btn-success.btn-sm #{val.status}
      else if val.status=='Maintenance'
        button.btn.btn-danger.btn-sm #{val.status}
      else
        button.btn.btn-warning.btn-sm #{val.status} 
      if val.status!='Available'
        button.btn.btn-primary.btn-sm  (Due: #{val.due_back_formatted} )

  else
    li There are no book copies in this library.